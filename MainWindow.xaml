<Window x:Class="Notepad_Screen_Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad_Screen_Reader"
        mc:Ignorable="d"
        Title="Notepad Screen Reader" Height="450" Width="300">
    <Grid>
        <TextBox Name="Log" HorizontalAlignment="Stretch" TextWrapping="Wrap" Margin="10,10,10,10" Padding="10,10,10,10"
                     VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch" IsReadOnly="True" Cursor="Arrow"/>
    </Grid>
</Window>
